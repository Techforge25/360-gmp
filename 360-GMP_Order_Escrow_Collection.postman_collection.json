		{
			"name": "2. Products (Setup)",
			"item": [
				{
					"name": "Create Product",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data._id) {",
									"        pm.collectionVariables.set(\"product_id\", jsonData.data._id);",
									"        console.log('Product ID saved:', jsonData.data._id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{seller_access_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Wireless Headphones\",\n    \"detail\": \"High-quality wireless headphones with noise cancellation\",\n    \"category\": \"Electronics\",\n    \"pricePerUnit\": 5000,\n    \"minOrderQty\": 1,\n    \"stockQty\": 50,\n    \"leadTime\": 3,\n    \"shippingTerms\": \"Standard Shipping\",\n    \"isFeatured\": false\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/products",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "products"]
						},
						"description": "Create a product as seller. Make sure you're logged in as seller and have business profile."
					},
					"response": []
				},
				{
					"name": "Get All Products",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/products?page=1&limit=10",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "products"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
								}
							]
						},
						"description": "Get all products to find product IDs for orders"
					},
					"response": []
				},
				{
					"name": "View Product",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/products/{{product_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "products", "{{product_id}}"]
						},
						"description": "View single product details"
					},
					"response": []
				}
			],
			"description": "Product endpoints - Create products before testing orders"
		},
		{
			"name": "3. Orders Flow",
			"item": [
				{
					"name": "Create Checkout Session",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.data) {",
									"        pm.collectionVariables.set(\"checkout_session_id\", jsonData.data.sessionId);",
									"        pm.collectionVariables.set(\"checkout_url\", jsonData.data.checkoutUrl);",
									"        console.log('Checkout URL:', jsonData.data.checkoutUrl);",
									"        console.log('Session ID:', jsonData.data.sessionId);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"items\": [\n        {\n            \"productId\": \"{{product_id}}\",\n            \"quantity\": 2\n        }\n    ],\n    \"shippingAddress\": \"House #1, Street 2, Karachi, Pakistan\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/orders/checkout",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "orders", "checkout"]
						},
						"description": "Create Stripe checkout session. Returns checkout URL. Use the URL in browser to complete payment with test card: 4242 4242 4242 4242"
					},
					"response": []
				},
				{
					"name": "Verify Payment & Create Order",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.order) {",
									"        pm.collectionVariables.set(\"order_id\", jsonData.data.order._id);",
									"        if (jsonData.data.escrowTransaction) {",
									"            pm.collectionVariables.set(\"escrow_transaction_id\", jsonData.data.escrowTransaction._id);",
									"        }",
									"        console.log('Order ID:', jsonData.data.order._id);",
									"        console.log('Escrow Status:', jsonData.data.order.escrowStatus);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/orders/verify-payment?session_id={{checkout_session_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "orders", "verify-payment"],
							"query": [
								{
									"key": "session_id",
									"value": "{{checkout_session_id}}",
									"description": "Session ID from checkout"
								}
							]
						},
						"description": "Verify payment and create order. Called after payment success on Stripe. This creates order and escrow transaction."
					},
					"response": []
				},
				{
					"name": "Get User Orders",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/orders?page=1&limit=10",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "orders"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
								}
							]
						},
						"description": "Get all orders for logged-in user"
					},
					"response": []
				},
				{
					"name": "Get Order By ID",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/orders/{{order_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "orders", "{{order_id}}"]
						},
						"description": "Get single order details with escrow information"
					},
					"response": []
				},
				{
					"name": "Update Order Status",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"orderStatus\": \"Shipped\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/orders/{{order_id}}/status",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "orders", "{{order_id}}", "status"]
						},
						"description": "Update order status. Valid values: Pending, Processing, Confirmed, Shipped, Delivered, Cancelled"
					},
					"response": []
				}
			],
			"description": "Complete order flow from checkout to order creation"
		},
		{
			"name": "4. Escrow System",
			"item": [
				{
					"name": "Create Stripe Connect Account",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201 || pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.data) {",
									"        pm.collectionVariables.set(\"connect_account_link\", jsonData.data.accountLink);",
									"        pm.collectionVariables.set(\"connect_account_id\", jsonData.data.accountId);",
									"        console.log('Connect Account Link:', jsonData.data.accountLink);",
									"        console.log('Account ID:', jsonData.data.accountId);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{seller_access_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/escrow/connect/create",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "escrow", "connect", "create"]
						},
						"description": "Create Stripe Connect account for seller. Returns onboarding link. Open link in browser to complete KYC and bank details."
					},
					"response": []
				},
				{
					"name": "Check Connect Account Status",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{seller_access_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/escrow/connect/status",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "escrow", "connect", "status"]
						},
						"description": "Check if Stripe Connect account is set up and ready to receive payments"
					},
					"response": []
				},
				{
					"name": "Get Escrow Transaction",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/escrow/transaction/{{escrow_transaction_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "escrow", "transaction", "{{escrow_transaction_id}}"]
						},
						"description": "Get escrow transaction details"
					},
					"response": []
				},
				{
					"name": "Release Escrow Funds to Seller",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    console.log('Funds Released:', jsonData.message);",
									"    console.log('Transfer ID:', jsonData.data.transfer.id);",
									"    console.log('Amount Transferred:', jsonData.data.transfer.transferAmount);",
									"    console.log('Platform Fee:', jsonData.data.transfer.platformFee);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"releaseNotes\": \"Order delivered successfully. Releasing escrow funds to seller.\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/escrow/release/{{order_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "escrow", "release", "{{order_id}}"]
						},
						"description": "Release escrow funds to seller after order delivery. Platform fee is deducted (default 5%)."
					},
					"response": []
				},
				{
					"name": "Refund Escrow Funds to Buyer",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    console.log('Refund Processed:', jsonData.message);",
									"    console.log('Refund ID:', jsonData.data.refund.id);",
									"    console.log('Refund Amount:', jsonData.data.refund.amount);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refundReason\": \"Order cancelled by buyer\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/escrow/refund/{{order_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "escrow", "refund", "{{order_id}}"]
						},
						"description": "Refund escrow funds to buyer if order is cancelled or disputed. Restores product stock."
					},
					"response": []
				}
			],
			"description": "Escrow system endpoints - Connect account setup, fund release, and refunds"
		}
	],
