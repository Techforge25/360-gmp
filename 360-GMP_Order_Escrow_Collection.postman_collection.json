									"    // Token comes in cookie or response",
									"    pm.test(\"Login successful\", function () {",
									"        pm.response.to.have.status(200);",
									"    });",
									"    ",
									"    // Extract access token from cookie if available",
									"    const cookies = pm.cookies.all();",
									"    console.log('Cookies:', cookies);",
									"}"
								],
