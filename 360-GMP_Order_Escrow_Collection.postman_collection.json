					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"buyer@test.com\",\n    \"passwordHash\": \"test123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/user/login",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "user", "login"]
